{% extends 'admin/adminTemplates.html.twig' %}

{% block title %}Region index{% endblock %}

{% block activeRegion %}
active
{% endblock %}

{% block title2 %}
Région
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col">
            <div class="card shadow">
                {% for message in app.session.flashBag.get('success') %}
                    <div class="alert alert-dismissible alert-success">
                        <button type="button" class="close" data-dismiss="alert">&times;</button>
                        <strong>{{ message }}</strong>
                    </div>
                {% endfor %}
                <div class="card-header border-0">
                    <h3 class="mb-0">
                        Listes des régions
                        <span class="text-success mr-2">
                            {#
                            ({{ regions.totalItemCount }} trouvés !)
                            #}
                        </span>
                    </h3>
                </div>
                <div class="table-responsive">
                    <table class="table align-items-center table-flush">
                        <thead class="thead-light">
                        <tr>
                            <th scope="col">N°</th>
                            <th scope="col">Nom</th>
                            <th scope="col"></th>
                        </tr>
                        </thead>
                        <tbody>
                        {#
                        {% set comp =1+(10*(authors.currentPageNumber-1)) %}
                        #}
                        {% for region in regions %}
                            <tr>
                                <td>{#{{ comp }}#} 1</td>
                                {#
                                {% set comp = comp+1 %}
                                #}
                                <td>{{ region.nom }}</td>
                                <td class="text-right">
                                    <div class="dropdown">
                                        <a class="btn btn-sm btn-icon-only text-light" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            <i class="fas fa-ellipsis-v"></i>
                                        </a>
                                        <div class="dropdown-menu dropdown-menu-right dropdown-menu-arrow">
                                            <a class="dropdown-item" href="{{ path('region_show', {'id': region.id}) }}">Voir</a>
                                            <a class="dropdown-item" href="{{ path('region_edit', {'id': region.id}) }}">Editer</a>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="8">Aucune région trouvée</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
                <div class="navigation">
                    {#
                    {{ knp_pagination_render(regions) }}
                    #}

                </div>
            </div>
            <br/>


            <a href="{{ path('region_new') }}" class="btn btn btn-primary">Ajouter une région</a>
            <br/>
            <br/>
        </div>
    </div>
{% endblock %}
